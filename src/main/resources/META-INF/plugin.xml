<idea-plugin>
    <id>com.plugin.internship.jetbrains-recruitment-plugin</id>

    <name>Change Last Commit Name</name>

    <vendor email="taranowiczmilosz@gmail.com">Mi≈Çosz Taranowicz</vendor>

    <description>Plugin developed for the purpose to be accepted into Jetbrains Internship</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>
    <actions>
        <action id="actions.RenameLastCommitAction"
                class="com.plugin.internship.jetbrainsrecruitmentplugin.actions.RenameCommitAction"
                text="Rename Last Commit" description="Change name of the last commit">
            <add-to-group group-id="VcsGroups" anchor="first"/>
        </action>
    </actions>
</idea-plugin>